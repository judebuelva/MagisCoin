<h1>Register a Merchant</h1>

<%= form_for(@user, :url=>{:action => 'create_merchant'}) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Merchant name"%>
    <%= form.text_field :merchant_name %>
  </div>

  <div class="field">
    <%= form.label "Owner First name" %>
    <%= form.text_field :owner_fname %>
  </div>

  <div class="field">
    <%= form.label "Owner Last name" %>
    <%= form.text_field :owner_lname %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label "Contact number" %>
    <%= form.number_field :contact_num %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Create Merchant"%>
  </div>

  <%= link_to 'Back', users_path %>
<% end %>
