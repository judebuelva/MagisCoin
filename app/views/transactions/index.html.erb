<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>MagisCoin - Admin</title>

  <!-- Custom fonts for this theme -->
  <link href="../../stylesheets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

  <!-- Theme CSS -->
  <link href="../../stylesheets/css/freelancer.min.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>

<body id="page-top">
<p id="notice"><%= notice %></p>
<div class="container">
  <% if current_user.try(:user_type) == "A" %>
      <h4>Create a Transaction</h4><div class="btn-group" role="group">
          <%= link_to 'Buy Load', new_transaction_path, :class => 'btn btn-warning' %>
          <%= link_to 'Send Load', new_transaction_path, :class => 'btn btn-success' %>
          </div>
          <br>
          <hr>
          <br>
            <div>
              <%= form_tag transactions_path, :method => 'get' do %>
              <%= text_field_tag :search, params[:search], placeholder: "Input Date" %>
              <%= submit_tag "Search", :class => 'btn btn-success'%>
            </div>
            <div>
              <p><%= link_to "Generate PDF", transactions_path(@transactions, :class => 'btn btn-secondary', format: "pdf") %></p>
            </div>
      <% end %>
      <% end %>
    <br><br>
	<div class="row">
        <div class="table-responsive col-md-12">
        <table id="sort2" class="grid table table-bordered table-sortable">
            <thead>
                <tr>
                    <th>Sender</th>
                    <th>Receiver</th>
                    <th>Card Number</th>
                    <th>Purchase type</th>
                    <th>Amount</th>
                    <th>Time recorded</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @transactions.each do |transaction| %>
                <% if current_user.try(:user_type) == "A" %>
                <tr>
                  <% if User.find(transaction.send_id).f_name == nil %>
                    <td><%= User.find(transaction.send_id).merchant_name %></td>
                  <% else %>
                    <td><%= User.find(transaction.send_id).f_name + " " +  User.find(transaction.send_id).l_name  %></td>
                  <% end %>
                    <% if User.find(transaction.recv_id).f_name == nil %>
                      <td><%= User.find(transaction.recv_id).merchant_name %></td>
                    <% else %>
                      <td><%= User.find(transaction.recv_id).f_name + " " +  User.find(transaction.recv_id).l_name %></td>
                    <% end %>
                    <td><%= transaction.card_id %></td>
                    <td><%= transaction.purchase_type %></td>
                    <td><%= transaction.amount %></td>
                    <td><%= transaction.time_recorded %></td>
                    <td><%= link_to '', transaction, :class => 'btn btn-info glyphicon glyphicon-eye-open'%></td>
                    <td><%= link_to '', edit_transaction_path(transaction), :class => 'btn btn-secondary glyphicon glyphicon-pencil'%></td>
                    <td><%= link_to '', transaction, method: :delete, data: { confirm: 'Are you sure you would want to delete this?' }, :class => 'btn btn-primary glyphicon glyphicon-remove' %></td>
                </tr>
              </tbody>
                <% elsif current_user.try(:user_type) == "C" || current_user.try(:user_type) == "M" %>
                <tbody>
                <tr>
                  <% if transaction.send_id == current_user.id || transaction.recv_id == current_user.id%>
                  <% if User.find(transaction.send_id).f_name == nil %>
                    <td><%= User.find(transaction.send_id).merchant_name %></td>
                  <% else %>
                    <td><%= User.find(transaction.send_id).f_name + " " + User.find(transaction.send_id).l_name %></td>
                  <% end %>
                    <% if User.find(transaction.recv_id).f_name == nil %>
                      <td><%= User.find(transaction.recv_id).merchant_name %></td>
                    <% else %>
                      <td><%= User.find(transaction.recv_id).f_name + " " + User.find(transaction.recv_id).l_name %></td>
                    <% end %>
                    <td><%= transaction.card_id %></td>
                    <td><%= transaction.purchase_type %></td>
                    <td><%= transaction.amount %></td>
                    <td><%= transaction.time_recorded %></td>
                    <td><%= link_to '', transaction, :class => 'btn btn-info glyphicon glyphicon-eye-open'%></td>
                    <td><%= link_to '', edit_transaction_path(transaction), :class => 'btn btn-secondary glyphicon glyphicon-pencil'%></td>
                    <td><%= link_to '', transaction, method: :delete, data: { confirm: 'Are you sure you would want to delete this?' }, :class => 'btn btn-primary glyphicon glyphicon-remove' %></td>
                    <% end %>
                </tr>
                </tbody>
                 <% end %>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
</div>
</body>
</html>
<script>
  $("#sender").onload(function(){
    $.getJSON("getname/" + document.getElementById("sender[0]").value + ".json", function( data ){
      if (data.f_name && data.l_name != null){
        document.getElementById("sender[0]").value = data.f_name + " " + data.l_name;
      } else {
        document.getElementById("sender[0]").value = data.merchant_name;
      }
    });
  });
  $("#receiver").onload(function(){
    $.getJSON("getname/" + document.getElementById("receiver[0]").value + ".json", function( data ){
      if (data.f_name && data.l_name != null){
        document.getElementById("receiver[0]").value = data.f_name + " " + data.l_name;
      } else {
        document.getElementById("receiver[0]").value = data.merchant_name;
      }
    });
  });

</script>
